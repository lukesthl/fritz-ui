{
  "name": "fritz-ui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "lint": "next lint",
    "start": "next start",
    "semantic-release": "semantic-release"
  },
  "author": {
    "name": "Luke",
    "email": "lukesthl@users.noreply.github.com",
    "url": "https://github.com/lukesthl"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@ryansonshine/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@lukesthl/fritzbox": "^1.0.2",
    "@lukesthl/ts-axios-digest-auth": "^1.0.5",
    "@radix-ui/react-accordion": "^1.2.11",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-tabs": "^1.1.12",
    "@tanstack/react-query": "^4.29.1",
    "@total-typescript/ts-reset": "^0.6.1",
    "@tremor/react": "^2.1.0",
    "@trpc/client": "^10.19.1",
    "@trpc/next": "^10.19.1",
    "@trpc/react-query": "^10.19.1",
    "@trpc/server": "^10.19.1",
    "axios": "^1.3.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "eslint": "^9",
    "eslint-config-next": "^15.1.8",
    "form-data": "^4.0.2",
    "formik": "^2.4.6",
    "framer-motion": "^12.12.2",
    "fuse.js": "^7.1.0",
    "lucide-react": "^0.511.0",
    "next": "15.1.8",
    "next-auth": "^4.24.11",
    "next-pwa": "^5.6.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-responsive": "^10.0.1",
    "superjson": "2.2.2",
    "tailwind-merge": "^1.12.0",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^11.1.0",
    "xmlbuilder": "^15.1.1",
    "zod": "^3.25.28"
  },
  "devDependencies": {
    "@codedependant/semantic-release-docker": "^4.3.0",
    "@ryansonshine/cz-conventional-changelog": "^3.3.4",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^22.15.21",
    "@types/prettier": "^3.0.0",
    "@types/react": "^19.1.5",
    "@types/react-dom": "^19.1.5",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.21",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "postcss": "^8.4.21",
    "prettier": "^2.8.7",
    "prettier-plugin-tailwindcss": "^0.2.7",
    "semantic-release": "^24.2.5",
    "tailwindcss": "^3.3.1",
    "typescript": "^5.8.3"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits"
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "build",
                "section": "Dependencies and Other Build Updates",
                "hidden": false
              }
            ]
          }
        }
      ],
      "@semantic-release/github",
      "@semantic-release/git",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      [
        "@codedependant/semantic-release-docker",
        {
          "dockerRegistry": "ghcr.io",
          "dockerLogin": false,
          "dockerProject": "lukesthl",
          "dockerTags": [
            "{{major}}.{{minor}}.{{patch}}",
            "{{major}}.{{minor}}",
            "{{major}}-latest",
            "{{git_sha}}",
            "latest"
          ],
          "dockerArgs": {
            "GITHUB_TOKEN": true
          }
        }
      ]
    ]
  },
  "bugs": {
    "url": "https://github.com/lukesthl/fritz-ui/issues"
  },
  "homepage": "https://github.com/lukesthl/fritz-ui#readme"
}
